{% schema %}
{
  "name": "t:sections.categories.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:sections.categories.settings.width.label",
      "options": [
        {
          "value": "container",
          "label": "t:sections.categories.settings.width.options.boxed"
        },
        {
          "value": "container-full",
          "label": "t:sections.categories.settings.width.options.full_width"
        }
      ],
      "default": "container"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "t:sections.categories.settings.title_alignment.label",
      "options": [
        {
          "value": "start",
          "label": "t:sections.categories.settings.title_alignment.options.default"
        },
        {
          "value": "center",
          "label": "t:sections.categories.settings.title_alignment.options.center"
        }
      ]
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.categories.settings.title.label",
      "default": "t:sections.categories.settings.title.default"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "t:sections.categories.settings.title_tag.label",
      "options": [
        {
          "value": "h5",
          "label": "t:sections.categories.settings.title_tag.options.small"
        },
        {
          "value": "h4",
          "label": "t:sections.categories.settings.title_tag.options.medium"
        },
        {
          "value": "h3",
          "label": "t:sections.categories.settings.title_tag.options.large"
        }
      ],
      "default": "h4"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "t:sections.categories.settings.subtitle.label",
      "default": "t:sections.categories.settings.subtitle.default"
    },
    {
      "type": "select",
      "id": "subtitle_size",
      "label": "t:sections.categories.settings.subtitle_size.label",
      "options": [
        {
          "value": "text-sm",
          "label": "t:sections.categories.settings.subtitle_size.options.small"
        },
        {
          "value": "text-md",
          "label": "t:sections.categories.settings.subtitle_size.options.medium"
        },
        {
          "value": "text-lg",
          "label": "t:sections.categories.settings.subtitle_size.options.large"
        }
      ],
      "default": "text-md"
    },
    {
      "type": "header",
      "content": "t:sections.categories.settings.image_size.content"
    },
    {
      "type": "select",
      "id": "image_shape",
      "label": "t:sections.categories.settings.image_shape.label",
      "options": [
        { "value": "circle", "label": "t:sections.categories.settings.image_shape.options.circle" },
        { "value": "square", "label": "t:sections.categories.settings.image_shape.options.square" }
      ],
      "default": "circle"
    },
    {
      "type": "select",
      "id": "image_size_type",
      "label": "t:sections.categories.settings.image_size_type.label",
      "options": [
        { "value": "auto", "label": "t:sections.categories.settings.image_size_type.options.auto" },
        { "value": "px", "label": "t:sections.categories.settings.image_size_type.options.px" }
      ],
      "default": "auto"
    },
    {
      "type": "range",
      "id": "image_size_px",
      "min": 100,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "t:sections.categories.settings.image_size_px.label",
      "default": 200,
      "info": "t:sections.categories.settings.image_size_px.info",
      "visible_if": "{{ section.settings.image_size_type == 'px' }}"
    },
    {
      "type": "header",
      "content": "t:sections.categories.settings.slider_settings.content"
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "t:sections.categories.settings.show_arrows.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_mobile_dots",
      "label": "t:sections.categories.settings.show_mobile_dots.label",
      "default": true
    },
    {
      "type": "range",
      "id": "items_per_row_desktop",
      "min": 3,
      "max": 6,
      "step": 1,
      "label": "t:sections.categories.settings.items_per_row_desktop.label",
      "default": 6
    },
    {
      "type": "range",
      "id": "items_per_row_tablet",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "t:sections.categories.settings.items_per_row_tablet.label",
      "default": 4
    },
    {
      "type": "range",
      "id": "items_per_row_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "t:sections.categories.settings.items_per_row_mobile.label",
      "default": 2
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_mobile_rate",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "t:sections.top_bar.settings.padding_mobile_rate.label",
      "default": 50,
      "info": "t:sections.top_bar.settings.padding_mobile_rate.info"
    },
    {
      "type": "range",
      "id": "padding_tablet_rate",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "t:sections.top_bar.settings.padding_tablet_rate.label",
      "default": 60,
      "info": "t:sections.top_bar.settings.padding_tablet_rate.info"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "t:sections.categories.blocks.category.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.categories.blocks.category.settings.collection.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.categories.blocks.category.settings.image.label",
          "info": "t:sections.categories.blocks.category.settings.image.info"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.categories.blocks.category.settings.title.label",
          "info": "t:sections.categories.blocks.category.settings.title.info"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.categories.blocks.category.settings.link.label",
          "info": "t:sections.categories.blocks.category.settings.link.info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.categories.presets.name",
      "category": "t:sections.categories.presets.category",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "T-Shirts"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Jeans"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Dresses"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Shoes"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Accessories"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Jackets"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<!-- Categories -->
<div class="container-full">
  <section class="flat-spacing color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding section-{{ section.id }}">
  <div class="{{ section.settings.width }}">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
    <div class="flat-title text-{{ section.settings.title_alignment }} wow fadeInUp">
      <{{ section.settings.title_tag }} class="title" style="color: rgb(var(--color-foreground));">
        {{- section.settings.title -}}
      </{{ section.settings.title_tag }}>
      {% if section.settings.subtitle != blank %}
        <p class="desc {{ section.settings.subtitle_size }}" style="color: rgb(var(--color-foreground2));">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
    </div>
    {% endif %}
    <div class="fl-control-sw2 pos1">
      <div
        dir="ltr"
        class="swiper tf-swiper"
        data-swiper='
          {
              "slidesPerView": {{ section.settings.items_per_row_mobile }},
              "spaceBetween": 12,
              "speed": 800,
              "observer": true,
              "observeParents": true,
              "watchOverflow": true,
              "slidesPerGroup": {{ section.settings.items_per_row_mobile }},
              "navigation": {
                  "clickable": true,
                  "nextEl": ".nav-next-categories",
                  "prevEl": ".nav-prev-categories",
                  "hideOnClick": false,
                  "disabledClass": "swiper-button-disabled",
                  "lockClass": "swiper-button-lock"
              },
              "pagination": {
                  "el": ".sw-pagination-categories",
                  "clickable": true,
                  "enabled": {{ section.settings.show_mobile_dots | json }}
              },
              "breakpoints": {
                  "575": {
                      "slidesPerView": {{ section.settings.items_per_row_mobile }},
                      "spaceBetween": 12,
                      "slidesPerGroup": {{ section.settings.items_per_row_mobile }}
                  },
                  "768": {
                      "slidesPerView": {{ section.settings.items_per_row_tablet }},
                      "spaceBetween": 12,
                      "slidesPerGroup": {{ section.settings.items_per_row_tablet }}
                  },
                  "992": {
                      "slidesPerView": {{ section.settings.items_per_row_tablet }},
                      "spaceBetween": 24,
                      "slidesPerGroup": {{ section.settings.items_per_row_tablet }}
                  },
                  "1200": {
                      "slidesPerView": {{ section.settings.items_per_row_desktop }},
                      "spaceBetween": 24,
                      "slidesPerGroup": {{ section.settings.items_per_row_desktop }}
                  }
              }
          }
        '
      >
        <div class="swiper-wrapper wow fadeInUp">
          {% for block in section.blocks %}
            {% if block.type == 'category' %}
              {% assign collection = block.settings.collection %}                <div class="swiper-slide">
                  <div class="wg-cls {% if section.settings.image_shape == 'circle' %}style-circle{% elsif section.settings.image_shape == 'square' %}style-square{% endif %} hover-img ">
                    {% assign link = block.settings.link | default: collection.url %}
                    <a
                      href="{{ link }}"
                      class="image img-style d-block bg-surface {% if section.settings.image_size_type == 'px' %} size-image-px{% endif %}"
                    >
                      {% assign image_size = 220 %}
                      {% if section.settings.image_size_type == 'px' %}
                        {% assign image_size = section.settings.image_size_px %}
                      {% endif %}
                      {% if block.settings.image %}
                        {{
                          block.settings.image
                          | image_url: width: image_size
                          | image_tag: class: 'lazyload', alt: block.settings.title, loading: 'lazy', decoding: 'async'
                        }}
                      {% elsif collection.image %}
                        {{
                          collection.image
                          | image_url: width: image_size
                          | image_tag: class: 'lazyload', alt: block.settings.title, loading: 'lazy', decoding: 'async'
                        }}
                      {% else %}
                        {% assign placeholder_index = forloop.index %}
                        <div class="placeholder-image">
                          {% if placeholder_index == 1 %}{{ 'collection-1' | placeholder_svg_tag }}
                          {% elsif placeholder_index == 2 %}{{ 'collection-2' | placeholder_svg_tag }}
                          {% elsif placeholder_index == 3 %}{{ 'collection-3' | placeholder_svg_tag }}
                          {% elsif placeholder_index == 4 %}{{ 'collection-4' | placeholder_svg_tag }}
                          {% elsif placeholder_index == 5 %}{{ 'collection-5' | placeholder_svg_tag }}
                          {% else %}{{ 'collection-6' | placeholder_svg_tag }}
                          {% endif %}
                        </div>
                      {% endif %}
                    </a>
                    <div class="cls-content text-center">
                      <a href="{{ link }}" class="link fw-medium heading-font {% if section.settings.image_shape == 'square' %}text-xl{% else %}text-md{% endif %}">
                        {{- block.settings.title | default: collection.title -}}
                      </a>
                    </div>
                  </div>
                </div>
            {% endif %}
          {% endfor %}
        </div>
        {% if section.settings.show_mobile_dots %}
          <div class="d-flex d-xl-none sw-dot-default sw-pagination-categories justify-content-center"></div>
        {% endif %}
      </div>
      {% assign has_categories = false %}
      {% for block in section.blocks %}
        {% if block.type == 'category' and block.settings.collection != blank %}
          {% assign has_categories = true %}
          {% break %}
        {% endif %}
      {% endfor %}
      
      {% if section.settings.show_arrows and has_categories %}
        <div class="swiper-button-next d-none d-xl-flex nav-swiper nav-next-categories"></div>
        <div class="swiper-button-prev d-none d-xl-flex nav-swiper nav-prev-categories"></div>
      {% endif %}
    </div>
  </div>
</section>
</div>
<!-- /Categories -->
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
    padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
  }

  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_tablet_rate | divided_by: 100.0 }});
      padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_tablet_rate | divided_by: 100.0 }});
    }
  }

  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media (min-width: 1200px) {
    /* Custom image sizing for categories section */
    .section-{{ section.id }} .wg-cls .image.size-image-px {
      width: {{ section.settings.image_size_px }}px;
      height: {{ section.settings.image_size_px }}px;
      margin: 0 auto;
    }
  }
  .section-{{ section.id }} .wg-cls .image.size-image-px img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Square image shape styling */
  .section-{{ section.id }} .wg-cls.style-square .image {
    border-radius: 0;
    aspect-ratio: 1 / 1;
  }
  .section-{{ section.id }} .wg-cls.style-square .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }

  /* Fix text cutoff issues for collection titles */
  .section-{{ section.id }} .wg-cls .cls-content {
    padding-top: 12px;
    min-height: auto;
    overflow: visible;
  }
  .section-{{ section.id }} .wg-cls .cls-content .link {
    display: block;
    line-height: 1.4;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  /* Placeholder image styling */
  .section-{{ section.id }} .wg-cls .image .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .section-{{ section.id }} .wg-cls .image .placeholder-image svg {
    width: 100%;
    height: 100%;
    fill: rgb(var(--color-foreground));
    opacity: 0.5;
  }
{%- endstyle -%}
