        errorCount++;
      } else {
        const zipRegex = /^\d+$/;
        const zipValue = zipInput.value.trim();
        const isZipValid = zipRegex.test(zipValue);
        console.log('Postal code regex test result:', isZipValid);

        if (!isZipValid) {
          console.log('Postal code contains non-numbers');
