          isValid = false;
          errorCount++;
        } else {
          console.log('Postal code is valid');
          hideError('error-zip');
        }
      }

      // Show general error message if there are multiple errors
      if (!isValid && errorCount > 1) {
        showGeneralError('Please correct the errors highlighted below before submitting.');
