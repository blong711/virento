    },
    {
      "type": "checkbox",
      "id": "use_dots_mobile",
      "label": "t:sections.testimonial.settings.use_dots_mobile.label",
      "default": true
    },
    {
      "type": "select",
      "id": "items_desktop",
      "label": "t:sections.testimonial.settings.items_desktop.label",
