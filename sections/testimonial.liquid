{% style %}
    .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
    padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }


  .flat-title.text-center {
    text-align: center !important;
  }

  .flat-title.text-left {
    text-align: left !important;
  }

  .flat-title.text-right {
    text-align: right !important;
  }

  .list-star-default {
    display: flex;
    gap: 4px;
    margin-bottom: 10px;
  }

  .list-star-default .icon-star {
    font-size: 18px;
  }

  .list-star-default .icon-star.empty {
    opacity: 0.5;
  }

  .text-review {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .author-image {
    width: 28px !important;
    height: 28px !important;
    border-radius: 50%;
    object-fit: cover;
    display: block;
  }
{% endstyle %}

<section class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="{% if section.settings.width == 'boxed' %}container {% else %} container-full {% endif %}">
    <div
      class="flat-title wow fadeInUp text-{{ section.settings.content_align }}"
      style="margin-bottom: {{ section.settings.heading_spacing }}px;"
    >
      {% if section.settings.heading != blank %}
        {% if section.settings.heading_size == 'small' %}
          <h5 class="title">{{ section.settings.heading }}</h5>
        {% elsif section.settings.heading_size == 'large' %}
          <h3 class="title">{{ section.settings.heading }}</h3>
        {% else %}
          <h4 class="title">{{ section.settings.heading }}</h4>
        {% endif %}
      {% endif %}
      {% if section.settings.subheading != blank %}
        {% if section.settings.subheading_size == 'small' %}
          <p class="desc text-sm" style="color: rgb(var(--color-foreground), 0.7);">{{ section.settings.subheading }}</p>
        {% elsif section.settings.subheading_size == 'large' %}
          <p class="desc text-lg" style="color: rgb(var(--color-foreground), 0.7);">{{ section.settings.subheading }}</p>
        {% else %}
          <p class="desc text-md" style="color: rgb(var(--color-foreground), 0.7);">{{ section.settings.subheading }}</p>
        {% endif %}
      {% endif %}
    </div>
    <div
      dir="ltr"
      class="swiper tf-swiper"
      data-swiper='
        {
            "slidesPerView": {{ section.settings.items_mobile }},
            "spaceBetween": 12,
            "speed": 800,
            "observer": true,
            "observeParents": true,
            "slidesPerGroup": {{ section.settings.items_mobile }},
            "navigation": {
                  "clickable": true,
                  "nextEl": ".nav-next-testimonial",
                  "prevEl": ".nav-prev-testimonial",
                  "enabled": {{ section.settings.show_nav | json }}
              },
            {% if section.settings.use_dots_mobile %}
            "pagination": { "el": ".sw-pagination-testimonial", "clickable": true },
            {% endif %}
            "breakpoints": {
              "575": {
                "slidesPerView": {{ section.settings.items_mobile }},
                "spaceBetween": 12,
                "slidesPerGroup": {{ section.settings.items_mobile }}
              },
              "768": {
                "slidesPerView": {{ section.settings.items_tablet }},
                "spaceBetween": 12,
                "slidesPerGroup": {{ section.settings.items_tablet }}
              },
              "1200": {
                "slidesPerView": {{ section.settings.items_desktop }},
                "spaceBetween": 24,
                "slidesPerGroup": {{ section.settings.items_desktop }}
              }
            }
        }
      '
    >
      <div class="swiper-wrapper wow fadeInUp">
        {%- for block in section.blocks -%}
          {% if block.type == 'testimonial_item' %}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              <div class="wg-testimonial style-2 type-2">
                <div class="content">
                  <div class="content-top">
                    <div class="list-star-default">
                      {%- for i in (1..5) -%}
                        {% if i <= block.settings.rating %}
                          <i
                            class="icon-start"
                            style="color: {{ section.settings.rating_star_color }}"
                          ></i>
                        {% else %}
                          <i class="icon-start" style="color: #ddd"></i>
                        {% endif %}
                      {%- endfor -%}
                    </div>
                    {% if block.settings.heading != blank %}
                      <p class="text-sm fw-medium">{{ block.settings.heading }}</p>
                    {% endif %}
                    {% if block.settings.content != blank %}
                      <div class="text-review text-md text-main">
                        {{ block.settings.content }}
                      </div>
                    {% endif %}
                    <div class="box-author">
                      {% if block.settings.author_image != blank %}
                        <div class="avt">
                          {{
                            block.settings.author_image
                            | image_url: width: 60
                            | image_tag: loading: 'lazy', width: 60, height: 60, class: 'author-image'
                          }}
                        </div>
                      {% endif %}
                      {% if block.settings.author_name != blank %}
                        <p class="name-author text-sm fw-medium">{{ block.settings.author_name }}</p>
                      {% endif %}
                    </div>
                  </div>
                  <span class="br-line d-block"></span>
                  {% if block.settings.product != blank %}
                    {% assign product = block.settings.product %}
                    <div class="bot">
                      <div class="box-avt">
                        <div class="avatar rounded-0">
                          {{
                            product.featured_image
                            | image_url: width: 120
                            | image_tag: loading: 'lazy', width: 120, height: 120, class: 'product-image'
                          }}
                        </div>
                        <div class="box-price">
                          <a href="{{ product.url }}" class="link name-item text-md fw-medium">{{ product.title }}</a>
                          <div class="price-container">
                            {% if product.compare_at_price > product.price %}
                              <span class="price text-primary text-md fw-medium">{{ product.price | money }}</span>
                              <span class="compare-price text-decoration-line-through text-dark-1 text-md fw-medium">{{ product.compare_at_price | money }}</span>
                            {% else %}
                              <p class="price text-md fw-medium">{{ product.price | money }}</p>
                            {% endif %}
                          </div>
                        </div>
                      </div>
                      <div class="box-btn d-none d-md-block">
                        <a href="{{ product.url }}" class="tf-btn-icon text-primary line-primary">
                          <i class="icon icon-arrow-top-left"></i>
                        </a>
                      </div>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        {%- endfor -%}
      </div>
      {% if section.settings.use_dots_mobile %}
      <div class="d-flex d-xl-none sw-dot-default sw-pagination-testimonial justify-content-center"></div>
      {% endif %}
      {% if section.settings.show_nav %}
        <div class="swiper-button-next d-none d-xl-flex nav-swiper nav-next-testimonial"></div>
        <div class="swiper-button-prev d-none d-xl-flex nav-swiper nav-prev-testimonial"></div>
      {% endif %}
    </div>
  </div>
</section>
<!-- /Testimonial -->

{% schema %}
{
