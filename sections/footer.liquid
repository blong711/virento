                                <path d="M11.8125 2.625H2.1875C1.8394 2.625 1.50556 2.76328 1.25942 3.00942C1.01328 3.25556 0.875 3.5894 0.875 3.9375V10.0625C0.875 10.4106 1.01328 10.7444 1.25942 10.9906C1.50556 11.2367 1.8394 11.375 2.1875 11.375H11.8125C12.1606 11.375 12.4944 11.2367 12.7406 10.9906C12.9867 10.7444 13.125 10.4106 13.125 10.0625V3.9375C13.125 3.5894 12.9867 3.25556 12.7406 3.00942C12.4944 2.76328 12.1606 2.625 11.8125 2.625ZM11.5675 3.5L7.28 7.07438C7.20139 7.13985 7.10231 7.17571 7 7.17571C6.89769 7.17571 6.79861 7.13985 6.72 7.07438L2.4325 3.5H11.5675ZM11.8125 10.5H2.1875C2.07147 10.5 1.96019 10.4539 1.87814 10.3719C1.79609 10.2898 1.75 10.1785 1.75 10.0625V4.06875L6.16 7.74375C6.39584 7.94019 6.69307 8.04776 7 8.04776C7.30693 8.04776 7.60416 7.94019 7.84 7.74375L12.25 4.06875V10.0625C12.25 10.1785 12.2039 10.2898 12.1219 10.3719C12.0398 10.4539 11.9285 10.5 11.8125 10.5Z" fill="#0D0D0D"/>
                              </svg>
                            </span>
                            <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
                          </li>
                        {%- endif -%}
                      </ul>
                      {%- if block.settings.show_map_button
                        and block.settings.map_button_text != blank
                        and block.settings.address != blank
                      -%}
                        <a
                          href="{{ block.settings.map_button_link }}"
                          target="_blank"
                          class="fw-normal mb_12 color-link"
                        >
                          <span class="text-sm text-transform-none">
                            {{ block.settings.map_button_text }}
                          </span>
                        </a>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              {%- when 'newsletter' -%}
                <div class="footer-inner-wrap footer-col-block s2" {{ block.shopify_attributes }}>
                  <div class="footer-heading footer-heading-mobile {% if section.settings.heading_size == 'small' %}text-sm{% elsif section.settings.heading_size == 'medium' %}text-md{% else %}text-xl{% endif %} {% if section.settings.heading_weight == 'normal' %}fw-normal{% elsif section.settings.heading_weight == 'bold' %}fw-semibold{% elsif section.settings.heading_weight == 'extrabold' %}fw-bold{% else %}fw-medium{% endif %}">
                    {{ block.settings.newsletter_heading | escape }}
                  </div>
                  <div class="tf-collapse-content">
                    <div class="footer-newsletter">
                      {%- if block.settings.newsletter_text != blank -%}
                        <div class="{% if section.settings.text_size == 'small' %}text-sm{% elsif section.settings.text_size == 'medium' %}text-md{% else %}text-lg{% endif %}">
                          {{ block.settings.newsletter_text }}
                        </div>
                      {%- endif -%}
                      {%- form 'customer', id: 'ContactFooter', class: 'form-newsletter' -%}
                        <input type="hidden" name="contact[tags]" value="newsletter">
                        <div class="subscribe-content">
                          <fieldset class="email">
                            <input
                              type="email"
                              name="contact[email]"
                              class="subscribe-email"
                              value="{{ form.email }}"
                              placeholder="{{ 'newsletter.label' | t }}"
                              required
                            >
                          </fieldset>
                          <div class="button-submit">
                            <button
                              class="subscribe-button animate-btn"
                              type="submit"
                              aria-label="Subscribe to newsletter"
                            >
                              <svg
                                width="18"
                                height="18"
                                viewBox="0 0 18 18"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                                aria-hidden="true"
                              >
                                <g clip-path="url(#clip0_5296_3345)">
                                    <path d="M17.7938 8.50229L17.7931 8.50162L14.1192 4.84537C13.8439 4.57147 13.3988 4.57249 13.1248 4.84776C12.8508 5.123 12.8519 5.56818 13.1271 5.84212L15.5938 8.29687H0.703125C0.314789 8.29687 0 8.61166 0 9C0 9.38833 0.314789 9.70312 0.703125 9.70312H15.5938L13.1272 12.1579C12.8519 12.4318 12.8509 12.877 13.1248 13.1522C13.3988 13.4275 13.844 13.4285 14.1192 13.1546L17.7932 9.49837L17.7938 9.4977C18.0692 9.22285 18.0683 8.77623 17.7938 8.50229Z" fill="white"/>
                                </g>
                                <defs>
                                    <clipPath id="clip0_5296_3345">
                                        <rect width="18" height="18" fill="white"/>
                                    </clipPath>
                                </defs>
                              </svg>
                            </button>
                          </div>
                        </div>
                        {%- if form.errors -%}
                          <small
                            class="newsletter-form__message form__message--error text-danger"
                            style="margin-top: 12px; display: block;"
                          >
                            {{ form.errors.translated_fields.email | capitalize }}
                            {{ form.errors.messages.email }}
                          </small>
                        {%- endif -%}
                        {%- if form.posted_successfully? -%}
                          <small
                            class="newsletter-form__message form__message--success text-success"
                            style="margin-top: 12px; display: block;"
                          >
                            {{ 'newsletter.success' | t }}
                          </small>
                        {%- endif -%}
                      {%- endform -%}
                    </div>
                  </div>
                </div>
            {%- endcase -%}
          {%- endfor -%}

          <div class="footer-inner-wrap s3">
            {%- for block in section.blocks -%}
              {%- if block.type == 'link_list' -%}
                <div class="footer-col-block inner-col" {{ block.shopify_attributes }}>
                  {%- if block.settings.heading != blank -%}
                    <div class="footer-heading footer-heading-mobile {% if section.settings.heading_size == 'small' %}text-sm{% elsif section.settings.heading_size == 'medium' %}text-md{% else %}text-xl{% endif %} {% if section.settings.heading_weight == 'normal' %}fw-normal{% elsif section.settings.heading_weight == 'bold' %}fw-semibold{% elsif section.settings.heading_weight == 'extrabold' %}fw-bold{% else %}fw-medium{% endif %}">
                      {{ block.settings.heading | escape }}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.menu != blank -%}
                    <div class="tf-collapse-content">
                      <ul class="footer-menu-list {% if section.settings.text_size == 'small' %}text-sm{% elsif section.settings.text_size == 'medium' %}text-md{% else %}text-lg{% endif %}">
                        {%- for link in block.settings.menu.links -%}
                          <li>
                            <a href="{{ link.url }}">{{ link.title }}</a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
    <div class="footer-bottom">
      <div class="container">
        <div class="footer-bottom-wrap">
          {%- if section.settings.show_copyright -%}
            {%- assign current_year = 'now' | date: '%Y' -%}
            <p class="text-dark">
              {{ 'sections.footer.copyright_html' | t: year: current_year, site_name: shop.name }}
            </p>
          {%- endif -%}
          {%- if section.settings.payment_svg_list != blank -%}
            <ul class="tf-payment">
              {%- assign svg_urls = section.settings.payment_svg_list | split: ',' -%}
              {%- for url in svg_urls -%}
                <li class="item">
                  {{ url | payment_type_svg_tag: 'size-icon-payment' }}
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
    </div>
  </footer>
{%- endif -%}

<!-- /Footer -->

{% style %}
    .size-icon-payment {
      height: {{ section.settings.svg_height }}px;
      width: auto;
    }

    .footer-heading,
    .footer-default a,
    .footer-bottom-wrap .color-footer-link {
      color: rgb(var(--color-foreground));
    }

    .footer-contact .color-link {
      text-decoration: underline;
      color: rgb(var(--color-link));
    }

    .footer-contact .color-link:hover {
      color: rgb(var(--color-link-hover));
    }

    .footer-heading-mobile::before, .footer-heading-mobile::after {
      background-color: rgb(var(--color-foreground));
  }

    .tf-social-icon.social-size .social-item {
      width: 47px;
      height: 47px;
    }
{% endstyle %}

