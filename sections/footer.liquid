<!-- Footer -->

{%- if section.settings.footer_layout == 'layout-1' -%}
  <!-- Layout 1: Dark background with centered content -->
  <footer id="footer" class="color-{{ section.settings.color_scheme }} footer-default xl-pb-70">
    <div class="footer-body line-top">
      <div class="container">
        <div class="row-footer">
          <div class="footer-col-block s1 border-0">
            <div class="footer-logo mb_32">
              <a href="{{ routes.root_url }}">
                {%- if settings.logo != blank -%}
                  <img
                    src="{{ settings.logo | image_url: width: settings.logo_width }}"
                    class="logo"
                    alt="{{ shop.name }}"
                    width="{{ settings.logo_width }}"
                    height="auto"
                    loading="lazy"
                  >
                {%- else -%}
                  <span class="h2">{{ shop.name }}</span>
                {%- endif -%}
              </a>
            </div>
            {%- for block in section.blocks -%}
              {%- if block.type == 'contact_info' -%}
                <div
                  class="footer-heading footer-heading-mobile {% if section.settings.heading_size == 'small' %}text-sm{% elsif section.settings.heading_size == 'medium' %}text-md{% else %}text-xl{% endif %} {% if section.settings.heading_weight == 'normal' %}fw-normal{% elsif section.settings.heading_weight == 'bold' %}fw-semibold{% elsif section.settings.heading_weight == 'extrabold' %}fw-bold{% else %}fw-medium{% endif %} font-13 d-sm-none d-flex"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.contact_heading }}
                </div>
                <div class="tf-collapse-content">
                  <div class="footer-contact">
                    {%- if block.settings.address != blank -%}
                      <p class="body-mb_12 {% if section.settings.text_size == 'small' %}text-sm{% elsif section.settings.text_size == 'medium' %}text-md{% else %}text-lg{% endif %}">
                        {{ block.settings.address }}
                      </p>
                      {%- if block.settings.show_map_button
                        and block.settings.map_button_text != blank
                        and block.settings.address != blank
                      -%}
                        <a
                          href="{{ block.settings.map_button_link }}"
                          target="_blank"
                          class="fw-normal mb_12 color-link"
                        >
                          <span class="text-sm text-transform-none">
                            {{ block.settings.map_button_text }}
                          </span>
                        </a>
                      {%- endif -%}
                    {%- endif -%}
                    {%- if block.settings.phone != blank -%}
                      <p class="body-mb_12 {% if section.settings.text_size == 'small' %}text-sm{% elsif section.settings.text_size == 'medium' %}text-md{% else %}text-lg{% endif %}">
                        {{ block.settings.phone }}
                      </p>
                    {%- endif -%}
                    {%- if block.settings.email != blank -%}
                      <p class=" mb_40 {% if section.settings.text_size == 'small' %}text-sm{% elsif section.settings.text_size == 'medium' %}text-md{% else %}text-lg{% endif %}">
                        {{ block.settings.email }}
                      </p>
                    {%- endif -%}
                    <ul class="tf-social-icon social-size style-large">
                      {%- if settings.social_facebook_link != blank -%}
                        <li>
                          <a
                            href="{{ settings.social_facebook_link }}"
                            class="social-item social-facebook"
                            target="_blank"
                            rel="noopener"
                            aria-label="{{ 'general.social.links.facebook' | t }}"
                          >
                            <i class="icon icon-fb"></i>
                          </a>
                        </li>
                      {%- endif -%}
                      {%- if settings.social_instagram_link != blank -%}
                        <li>
                          <a
                            href="{{ settings.social_instagram_link }}"
                            class="social-item social-instagram"
                            target="_blank"
                            rel="noopener"
                            aria-label="{{ 'general.social.links.instagram' | t }}"
                          >
                            <i class="icon icon-instagram"></i>
                          </a>
                        </li>
                      {%- endif -%}
                      {%- if settings.social_youtube_link != blank -%}
                        <li>
                          <a
                            href="{{ settings.social_youtube_link }}"
                            class="social-item social-youtube"
                            target="_blank"
                            rel="noopener"
                            aria-label="{{ 'general.social.links.youtube' | t }}"
                          >
                            <i class="icon icon-youtube"></i>
                          </a>
                        </li>
                      {%- endif -%}
                      {%- if settings.social_tiktok_link != blank -%}
                        <li>
                          <a
                            href="{{ settings.social_tiktok_link }}"
                            class="social-item social-tiktok"
                            target="_blank"
                            rel="noopener"
                            aria-label="{{ 'general.social.links.tiktok' | t }}"
                          >
                            <i class="icon icon-tiktok"></i>
                          </a>
                        </li>
                      {%- endif -%}
                      {%- if settings.social_twitter_link != blank -%}
                        <li>
                          <a
                            href="{{ settings.social_twitter_link }}"
                            class="social-item social-x"
                            target="_blank"
                            rel="noopener"
                            aria-label="{{ 'general.social.links.twitter' | t }}"
                          >
                            <i class="icon icon-x"></i>
                          </a>
                        </li>
                      {%- endif -%}
                      {%- if settings.social_snapchat_link != blank -%}
                        <li>
                          <a
                            href="{{ settings.social_snapchat_link }}"
                            class="social-item social-snapchat"
                            target="_blank"
                            rel="noopener"
                            aria-label="{{ 'general.social.links.snapchat' | t }}"
                          >
                            <i class="icon icon-snapchat"></i>
                          </a>
                        </li>
                      {%- endif -%}
                      {%- if settings.social_pinterest_link != blank -%}
                        <li>
                          <a
                            href="{{ settings.social_pinterest_link }}"
                            class="social-item social-pinterest"
                            target="_blank"
                            rel="noopener"
                            aria-label="{{ 'general.social.links.pinterest' | t }}"
                          >
                            <i class="icon icon-pinterest"></i>
                          </a>
                        </li>
                      {%- endif -%}
                    </ul>
                  </div>
                </div>
                {%- break -%}
              {%- endif -%}
            {%- endfor -%}
          </div>
          <div class="footer-inner-wrap s3 border-0 mb_20">
            {%- for block in section.blocks -%}
              {%- if block.type == 'link_list' -%}
                <div class="footer-col-block inner-col" {{ block.shopify_attributes }}>
                  <div class="footer-heading footer-heading-mobile {% if section.settings.heading_size == 'small' %}text-sm{% elsif section.settings.heading_size == 'medium' %}text-md{% else %}text-xl{% endif %} {% if section.settings.heading_weight == 'normal' %}fw-normal{% elsif section.settings.heading_weight == 'bold' %}fw-semibold{% elsif section.settings.heading_weight == 'extrabold' %}fw-bold{% else %}fw-medium{% endif %} font-7">
                    {{ block.settings.heading | escape }}
                  </div>
                  <div class="tf-collapse-content">
                    {%- if block.settings.menu != blank -%}
                      <ul class="footer-menu-list">
                        {%- for link in block.settings.menu.links -%}
                          <li>
                            <a
                              class="{% if section.settings.text_size == 'small' %}text-sm{% elsif section.settings.text_size == 'medium' %}text-md{% else %}text-lg{% endif %}"
                              href="{{ link.url }}"
                            >
                              {{- link.title -}}
                            </a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
          <div class="footer-inner-wrap footer-col-block s2 border-0">
            {%- for block in section.blocks -%}
              {%- if block.type == 'newsletter' -%}
                <div
                  class="footer-heading footer-heading-mobile {% if section.settings.heading_size == 'small' %}text-sm{% elsif section.settings.heading_size == 'medium' %}text-md{% else %}text-xl{% endif %} {% if section.settings.heading_weight == 'normal' %}fw-normal{% elsif section.settings.heading_weight == 'bold' %}fw-semibold{% elsif section.settings.heading_weight == 'extrabold' %}fw-bold{% else %}fw-medium{% endif %} font-7"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.newsletter_heading | default: 'Subscribe to Newsletter' | escape }}
                </div>
                <div class="tf-collapse-content">
                  <div class="footer-newsletter">
                    <p class="{% if section.settings.text_size == 'small' %}text-sm{% elsif section.settings.text_size == 'medium' %}text-md{% else %}text-lg{% endif %}">
                      {{
                        block.settings.newsletter_text
                        | default: 'Subscribe for 15% off your first order and unlock your inner potential with us.'
                      }}
                    </p>
                    {%- form 'customer', id: 'ContactFooter', class: 'form-newsletter' -%}
                      <input type="hidden" name="contact[tags]" value="newsletter">
                      <div class="subscribe-content">
                        <fieldset class="email">
                          <input
                            type="email"
                            name="contact[email]"
                            class="subscribe-email rounded-0 bg-white"
                            placeholder="{{ 'newsletter.label' | t | default: 'Your email' }}"
                            value="{{ form.email }}"
                            tabindex="0"
                            aria-required="true"
                            required
                          >
                        </fieldset>
                        <div class="button-submit end-0">
                          <button
                            class="tf-btn subscribe-button animate-btn {% if section.settings.text_size == 'small' %}text-sm{% elsif section.settings.text_size == 'medium' %}text-md{% else %}text-lg{% endif %} rounded-0 bg-purple-1"
                            type="submit"
                            aria-label="Subscribe to newsletter"
                          >
                            Submit
                            <svg
                              width="11"
                              height="12"
                              viewBox="0 0 11 12"
                              fill="none"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <path d="M9.16987 3.62403L1.2939 11.5L0 10.2061L7.87505 2.33013H0.934282V0.5H11V10.5657H9.16987V3.62403Z" fill="white"></path>
                            </svg>
                          </button>
                        </div>
                      </div>
                      {%- if form.errors -%}
                        <small
                          class="newsletter-form__message form__message--error text-danger"
                          style="margin-top: 12px; display: block;"
                        >
                          {{ form.errors.translated_fields.email | capitalize }}
                          {{ form.errors.messages.email }}
                        </small>
                      {%- endif -%}
                      {%- if form.posted_successfully? -%}
                        <small
                          class="newsletter-form__message form__message--success text-success"
                          style="margin-top: 12px; display: block;"
                        >
                          {{ 'newsletter.success' | t }}
                        </small>
                      {%- endif -%}
                    {%- endform -%}
                  </div>
                </div>
                {%- break -%}
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
    <div class="footer-bottom line-3">
      <div class="container">
        <div class="footer-bottom-wrap">
          {%- if section.settings.show_copyright -%}
            {%- assign current_year = 'now' | date: '%Y' -%}
            <p class="text-dark-8 {% if section.settings.text_size == 'small' %}text-sm{% elsif section.settings.text_size == 'medium' %}text-md{% else %}text-lg{% endif %}">
              {{ 'sections.footer.copyright_html' | t: year: current_year, site_name: shop.name }}
            </p>
          {%- endif -%}
          {%- if section.settings.payment_svg_list != blank -%}
            <ul class="tf-payment">
              {%- assign svg_urls = section.settings.payment_svg_list | split: ',' -%}
              {%- for url in svg_urls -%}
                <li class="item">{{ url | payment_type_svg_tag: 'size-icon-payment' }}</li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
          {%- if section.settings.footer_links != blank -%}
            <ul class="d-flex gap-48 flex-wrap">
              {%- for link in section.settings.footer_links.links -%}
                <li>
                  <a class="link font-13 color-footer-link" href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
    </div>
  </footer>

