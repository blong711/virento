{% schema %}
{
  "name": "t:sections.brands.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:sections.tag-products-carousel.settings.width.label",
      "options": [
        {
          "value": "container",
          "label": "t:sections.tag-products-carousel.settings.width.options.boxed"
        },
        {
          "value": "container-full",
          "label": "t:sections.tag-products-carousel.settings.width.options.full_width"
        }
      ],
      "default": "container"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "t:sections.brands.settings.title_alignment.label",
      "options": [
        {
          "value": "start",
          "label": "t:sections.brands.settings.title_alignment.options.default"
        },
        {
          "value": "center",
          "label": "t:sections.brands.settings.title_alignment.options.center"
        }
      ]
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.brands.settings.title.label",
      "default": "t:sections.brands.settings.title.default"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "t:sections.brands.settings.title_tag.label",
      "options": [
        {
          "value": "h5",
          "label": "t:sections.brands.settings.title_tag.options.small"
        },
        {
          "value": "h4",
          "label": "t:sections.brands.settings.title_tag.options.medium"
        },
        {
          "value": "h3",
          "label": "t:sections.brands.settings.title_tag.options.large"
        }
      ],
      "default": "h4"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "t:sections.brands.settings.subtitle.label",
      "default": "t:sections.brands.settings.subtitle.default"
    },
    {
      "type": "select",
      "id": "subtitle_size",
      "label": "t:sections.brands.settings.subtitle_size.label",
      "options": [
        {
          "value": "text-sm",
          "label": "t:sections.brands.settings.subtitle_size.options.small"
        },
        {
          "value": "text-md",
          "label": "t:sections.brands.settings.subtitle_size.options.medium"
        },
        {
          "value": "text-lg",
          "label": "t:sections.brands.settings.subtitle_size.options.large"
        }
      ],
      "default": "text-md"
    },
    {
      "type": "header",
      "content": "t:sections.brands.settings.slider_settings.content"
    },
    {
      "type": "checkbox",
      "id": "enable_border_radius",
      "label": "t:sections.brands.settings.enable_border_radius.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "t:sections.brands.settings.show_arrows.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_mobile_dots",
      "label": "t:sections.brands.settings.show_mobile_dots.label",
      "default": true
    },
    {
      "type": "range",
      "id": "items_per_row_desktop",
      "min": 3,
      "max": 8,
      "step": 1,
      "label": "t:sections.brands.settings.items_per_row_desktop.label",
      "default": 6
    },
    {
      "type": "range",
      "id": "items_per_row_tablet",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "t:sections.brands.settings.items_per_row_tablet.label",
      "default": 4
    },
    {
      "type": "range",
      "id": "items_per_row_mobile",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "t:sections.brands.settings.items_per_row_mobile.label",
      "default": 3
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_mobile_rate",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "t:sections.top_bar.settings.padding_mobile_rate.label",
      "default": 50,
      "info": "t:sections.top_bar.settings.padding_mobile_rate.info"
    },
    {
      "type": "range",
      "id": "padding_tablet_rate",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "t:sections.top_bar.settings.padding_tablet_rate.label",
      "default": 60,
      "info": "t:sections.top_bar.settings.padding_tablet_rate.info"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "t:sections.brands.blocks.brand.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_image",
          "label": "t:sections.brands.blocks.brand.settings.brand_image.label"
        },
        {
          "type": "text",
          "id": "brand_name",
          "label": "t:sections.brands.blocks.brand.settings.brand_name.label",
          "info": "Used for alt text"
        },
        {
          "type": "url",
          "id": "brand_link",
          "label": "t:sections.brands.blocks.brand.settings.brand_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.brands.presets.name",
      "category": "t:sections.brands.presets.category",
      "blocks": [
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
          padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
          padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
      }

  @media screen and (min-width: 750px) and (max-width: 1199px) {
      .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_tablet_rate | divided_by: 100.0 }});
      padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_tablet_rate | divided_by: 100.0 }});
      }
  }

  @media screen and (min-width: 1200px) {
      .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      }
  }

{% endstyle %}

<div class="flat-spacing color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="{{ section.settings.width }}">
    {% if section.settings.title != blank or section.settings.subtitle != blank or section.settings.show_navigation %}
    <div class="flat-title style-between align-items-end wow fadeInUp{% if section.settings.title_alignment == 'center' %} text-center{% endif %}">
      <div class="box-title{% if section.settings.title_alignment == 'center' %} w-100{% endif %}">
        {% if section.settings.title != blank %}
          <{{ section.settings.title_tag }} class="title">{{ section.settings.title }}</{{ section.settings.title_tag }}>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="desc {{ section.settings.subtitle_size }}" style="color: rgb(var(--color-foreground2));">
            {{ section.settings.subtitle }}
          </p>
        {% endif %}
      </div>
      {% if section.settings.show_navigation %}
        <div class="box-nav-swiper style-2 d-none d-xl-flex">
          <div class="swiper-button-prev nav-swiper nav-prev-brand relative"></div>
          <div class="swiper-button-next nav-swiper nav-next-brand relative"></div>
        </div>
      {% endif %}
    </div>
    {% endif %}
    <div
      dir="ltr"
      class="swiper tf-swiper sw-brand border-0"
      data-swiper='
        {
            "slidesPerView": {{ section.settings.items_per_row_mobile }},
            "spaceBetween": 6,
            "speed": 800,
            "slidesPerGroup": {{ section.settings.items_per_row_mobile }},
            "pagination": {
                "el": ".sw-pagination-brand",
                "clickable": true,
                "enabled": {{ section.settings.show_mobile_dots | json }}
            },
            "navigation": {
                "nextEl": ".nav-next-brand",
                "prevEl": ".nav-prev-brand",
                "enabled": {{ section.settings.show_navigation | json }}
            },
            "breakpoints": {
                "575": { "slidesPerView": {{ section.settings.items_per_row_mobile }}},
                "576": { "slidesPerView": {{ section.settings.items_per_row_tablet }}},
                "1200": { "slidesPerView": {{ section.settings.items_per_row_desktop }}}
            }
        }
      '
    >
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'brand' %}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              <div class="brand-item line{% if section.settings.enable_border_radius %} radius-8{% endif %} wow fadeInLeft"{% if forloop.index0 > 0 %} data-wow-delay="{{ forloop.index0 | times: 0.1 }}s"{% endif %}>
                {% if block.settings.brand_link != blank %}
                  <a href="{{ block.settings.brand_link }}">
                {% endif %}
                {% if block.settings.brand_image != blank %}
                  <img
                    src="{{ block.settings.brand_image | image_url }}"
                    alt="{{ block.settings.brand_name | escape }}"
                    width="{{ block.settings.brand_image.width | default: 240 }}"
                    height="{{ block.settings.brand_image.height | default: 114 }}"
                    loading="lazy"
                    class="brand-logo"
                  >
                {% else %}
                  {{ 'collection-5' | placeholder_svg_tag }}
                {% endif %}
                {% if block.settings.brand_link != blank %}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% if section.settings.show_mobile_dots %}
      <div class="d-flex d-xl-none sw-dot-default sw-pagination-brand justify-content-center"></div>
    {% endif %}
  </div>
</div>
