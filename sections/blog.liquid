<div class="gradient section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="{% if section.settings.width == 'boxed' %}container{% else %}container-full{% endif %}">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'blog_content' %}
          {% assign has_sidebar = false %}
          {% for check_block in section.blocks %}
            {% if check_block.type == 'blog_sidebar' %}
              {% assign has_sidebar = true %}
              {% break %}
            {% endif %}
          {% endfor %}

          <!-- Blog Content Section -->
          <section
            class="{% if section.settings.layout == 'list' %}s-blog-list-v1{% elsif section.settings.layout == 'list_v2' %}s-blog-list-v2 sec-blog{% elsif section.settings.layout == 'grid_v2' %}s-blog-grid-v2 sec-blog{% else %}s-blog-grid{% endif %} space-blog color-{{ section.settings.color_scheme }} gradient"
            {{ block.shopify_attributes }}
          >
            {% comment %} Determine blog source based on settings {% endcomment %}
            {% assign current_blog = blog %}
            {% assign blog_source_type = block.settings.blog_source | default: 'current' %}

            {% if blog_source_type == 'specific' and block.settings.specific_blog != blank %}
              {% assign current_blog = blogs[block.settings.specific_blog] %}
            {% endif %}

            {% comment %} Generate image ratio class {% endcomment %}
            {%- assign image_ratio = block.settings.image_ratio | default: '-adapt_image' -%}
            {%- capture ratio_class -%}
              {%- case image_ratio -%}
                {%- when '-square' -%}blog-image-ratio--square
                {%- when '-asos' -%}blog-image-ratio--asos  
                {%- when '-landscape' -%}blog-image-ratio--landscape
                {%- when '4-3' -%}blog-image-ratio--4-3
                {%- when '3-4' -%}blog-image-ratio--3-4
                {%- else -%}blog-image-ratio--adapt
              {%- endcase -%}
            {%- endcapture -%}

            {% comment %} Generate content alignment class {% endcomment %}
            {%- assign content_align = block.settings.Content_align | default: 'start' -%}

            {% comment %} Generate responsive grid classes {% endcomment %}
            {%- assign grid_dk = block.settings.items_per_row_dk | default: '2' -%}
            {%- assign grid_tb = block.settings.items_per_row_tb | default: '2' -%}
            {%- assign grid_mb = block.settings.items_per_row_mb | default: '1' -%}
            {%- capture responsive_grid_class -%}grid-{{ grid_dk }} grid-tb-{{ grid_tb }} grid-mb-{{ grid_mb }}{%- endcapture -%}

            <div class="row">
              <!-- Sidebar for list_v2 and grid_v2 layouts -->
              {% assign show_sidebar_left = false %}
              {% if has_sidebar %}
                {% if section.settings.layout == 'list_v2' or section.settings.layout == 'grid_v2' %}
                  {% assign show_sidebar_left = true %}
                {% endif %}
              {% endif %}
              {% if show_sidebar_left %}
                {% for sidebar_block in section.blocks %}
                  {% if sidebar_block.type == 'blog_sidebar' %}
                    <div class="col-lg-4">
                      <div class="sidebar-blog d-lg-grid d-none sidebar-content-wrap type-left">
                        {% if sidebar_block.settings.show_categories %}
                          <div class="sb-item">
                            <p class="sb-title text-xl fw-medium">Categories</p>
                            <div class="sb-content">
                              {% if current_blog.all_tags.size > 0 %}
                                <ul class="category-blog-list">
                                  {% assign sorted_tags = current_blog.all_tags | sort %}
                                  {% for tag in sorted_tags %}
                                    <li>
                                      <a href="{{ current_blog.url }}/tagged/{{ tag | handle }}" class="text-md link{% if current_tags contains tag %} active{% endif %}">
                                        {{- tag -}}
                                        {% comment %}Note: Post count is not shown as it requires additional development{% endcomment %}
                                      </a>
                                    </li>
                                  {% endfor %}
                                </ul>
                              {% endif %}
                            </div>
                          </div>
                        {% endif %}

                        {% if sidebar_block.settings.show_recent_posts %}
                          <div class="sb-item">
                            <p class="sb-title text-xl fw-medium">{{ 'sections.blog.recent_posts' | t }}</p>
                            <div class="sb-content">
                              {% if current_blog.articles.size > 0 %}
                                <ul class="recent-blog-list">
                                  {% for article in current_blog.articles limit: 3 %}
                                    <li class="hover-img">
                                      <div class="image">
                                        <a href="{{ article.url }}" class="img-style d-block">
                                          {% if article.image %}
                                            <img
                                              src="{{ article.image | image_url: width: 100 }}"
                                              data-src="{{ article.image | image_url: width: 100 }}"
                                              alt="{{ article.image.alt | escape }}"
                                              class="lazyload"
                                              width="100"
                                              height="80"
                                              loading="lazy"
                                            >
                                          {% else %}
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                          {% endif %}
                                        </a>
                                      </div>
                                      <div class="post-content">
                                        <a href="{{ article.url }}" class="link text-md fw-medium">
                                          {{ article.title | truncate: 50 }}
                                        </a>
                                        <p class="entry_date">
                                          {% assign date_format = block.settings.date | default: '%b %d' %}
                                          {% case date_format %}
                                            {% when 'abbreviated_date' %}
                                              {{ article.published_at | date: '%b %d, %Y' }}
                                            {% when 'basic' %}
                                              {{ article.published_at | date: '%m/%d/%Y' }}
                                            {% when 'date' %}
                                              {{ article.published_at | date: '%B %d, %Y' }}
                                            {% when '%b %d' %}
                                              {{ article.published_at | date: '%b %d %Y' }}
                                            {% else %}
                                              {{ article.published_at | date: date_format }}
                                          {% endcase %}
                                        </p>
                                      </div>
                                    </li>
                                  {% endfor %}
                                </ul>
                              {% endif %}
                            </div>
                          </div>
                        {% endif %}

                        {% if sidebar_block.settings.show_tags %}
                          <div class="sb-item">
                            <p class="sb-title text-xl fw-medium">{{ 'sections.blog.tags' | t }}</p>
                            <div class="sb-content entry-tag">
                              {% if current_blog.all_tags.size > 0 %}
                                <ul class="tag-blog-list style-list">
                                  {% for tag in current_blog.all_tags limit: 8 %}
                                    <li>
                                      <a
                                        href="{{ current_blog.url }}/tagged/{{ tag | handle }}"
                                        class="type-{{ tag | handle }}"
                                      >
                                        {{ tag }}
                                      </a>
                                    </li>
                                  {% endfor %}
                                </ul>
                              {% endif %}
                            </div>
                          </div>
                        {% endif %}

                        {% if sidebar_block.settings.sidebar_banner_image %}
                          <div class="sb-item">
                            <div class="sb-banner hover-img">
                              <div class="image img-style">
                                <img
                                  src="{{ sidebar_block.settings.sidebar_banner_image | image_url: width: 400 }}"
                                  data-src="{{ sidebar_block.settings.sidebar_banner_image | image_url: width: 400 }}"
                                  alt="{{ sidebar_block.settings.sidebar_banner_title | escape }}"
                                  class="lazyload"
                                  width="400"
                                  height="300"
                                >
                              </div>
                              <div class="banner-content">
                                {% if sidebar_block.settings.sidebar_banner_title != blank %}
                                  <p class="title">
                                    {{ sidebar_block.settings.sidebar_banner_title }}
                                  </p>
                                {% endif %}
                                {% if sidebar_block.settings.sidebar_banner_button_text != blank
                                  and sidebar_block.settings.sidebar_banner_button_link != blank
                                %}
                                  <a
                                    href="{{ sidebar_block.settings.sidebar_banner_button_link }}"
                                    class="tf-btn btn-white hover-primary"
                                  >
                                    {{ sidebar_block.settings.sidebar_banner_button_text }}
                                  </a>
                                {% endif %}
                              </div>
                            </div>
                          </div>
                        {% endif %}
                      </div>
                    </div>
                    {% break %}
                  {% endif %}
                {% endfor %}
              {% endif %}

              <!-- Main Content Area -->
              {% assign main_content_class = 'col-12' %}
              {% if show_sidebar_left %}
                {% assign main_content_class = 'col-lg-8' %}
              {% elsif has_sidebar and section.settings.layout != 'list_v2' and section.settings.layout != 'grid_v2' %}
                {% assign main_content_class = 'col-lg-8' %}
              {% endif %}
              <div class="{{ main_content_class }}">
                {% comment %} Handle single blog mode (current or specific) {% endcomment %}
                {%- paginate current_blog.articles by block.settings.article_limit -%}
                  <div class="{% if section.settings.layout == 'list' or section.settings.layout == 'list_v2' %}s-content{% elsif section.settings.layout == 'grid_v2' %}s-blog-list-grid grid-2{% else %}s-blog-list-grid {{ responsive_grid_class | strip }}{% endif %}">
                    {% if current_blog.articles.size > 0 %}
                      {% for article in current_blog.articles %}
                        <div class="blog-post-item {% if section.settings.layout == 'list_v2' %}style-2{% elsif section.settings.layout == 'grid_v2' %}{% comment %}grid_v2 styling{% endcomment %}{% endif %} hover-img">
                          <div class="entry_image">
                            <a
                              href="{{ article.url }}"
                              class="blog-image-ratio img-style {{ ratio_class | strip }}"
                            >
                              <div class="blog-image-ratio img-style {{ ratio_class | strip }}">
                              {% if article.image %}
                                {% if section.settings.layout == 'list' %}
                                  <img
                                    src="{{ article.image | image_url: width: 600 }}"
                                    data-src="{{ article.image | image_url: width: 600 }}"
                                    alt="{{ article.image.alt | escape }}"
                                    class="lazyload"
                                    loading="lazy"
                                    width="600"
                                    height="400"
                                  >
                                {% elsif section.settings.layout == 'list_v2' or section.settings.layout == 'grid_v2' %}
                                  <img
                                    src="{{ article.image | image_url: width: 600 }}"
                                    data-src="{{ article.image | image_url: width: 600 }}"
                                    alt="{{ article.image.alt | escape }}"
                                    class="lazyload"
                                    loading="lazy"
                                    width="600"
                                    height="400"
                                  >
                                {% else %}
                                  <img
                                    src="{{ article.image | image_url: width: 400 }}"
                                    data-src="{{ article.image | image_url: width: 400 }}"
                                    alt="{{ article.image.alt | escape }}"
                                    class="lazyload"
                                    loading="lazy"
                                    width="400"
                                    height="300"
                                  >
                                {% endif %}
                              {% else %}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                              {% endif %}
                              </div>
                            </a>
                          </div>
                          <div class="blog-content blog-content--{{ content_align }}">
                            <div class="entry-tag">
                              <ul class="style-list">
                                {% for tag in article.tags limit: 1 %}
                                  <li>
                                    <a
                                      href="{{ current_blog.url }}/tagged/{{ tag | handle }}"
                                      class="type-{{ tag | handle }}"
                                    >
                                      {{ tag }}
                                    </a>
                                  </li>
                                {% endfor %}
                              </ul>
                            </div>
                            <a href="{{ article.url }}" class="entry_title d-block text-xl fw-medium link">
                              {% if section.settings.layout == 'list' or section.settings.layout == 'list_v2' %}
                                {{ article.title }}
                              {% else %}
                                {{ article.title | truncate: 35 }}
                              {% endif %}
                            </a>
                            {% if block.settings.show_excerpt %}
                              <p class="entry_sub text-md text-main">
                                {% if section.settings.layout == 'list' or section.settings.layout == 'list_v2'%}
                                  {{ article.excerpt | strip_html | truncate: 150 }}
                                {% else %}
                                  {{ article.excerpt | strip_html | truncate: 70 }}
                                {% endif %}
                              </p>
                            {% endif %}
                            <ul class="entry-meta">
                              {% if block.settings.show_author %}
                                <li class="entry_author">
                                  <div class="avatar">
                                    {% if article.author.image %}
                                      {{
                                        article.author.image
                                        | image_url: width: 50
                                        | image_tag: loading: 'lazy', class: 'lazyload', alt: article.author
                                      }}
                                    {% else %}
                                      <img
                                        src="{{ 'blog-author-1.jpg' | asset_url }}"
                                        data-src="{{ 'blog-author-1.jpg' | asset_url }}"
                                        loading="lazy"
                                        class="lazyload"
                                        alt="{{ article.author }}"
                                        width="50"
                                        height="50"
                                      >
                                    {% endif %}
                                  </div>
                                  <p class="entry_name">
                                    {{ 'sections.blog.post_by' | t }}
                                    {% if section.settings.layout == 'list' or section.settings.layout == 'list_v2' %}
                                      {{ article.author | default: shop.name }}
                                    {% else %}
                                      {{ article.author | default: shop.name | truncate: 10 }}
                                    {% endif %}
                                  </p>
                                </li>
                                <li class="br-line"></li>
                              {% endif %}
                              {% if block.settings.show_date %}
                                <li class="entry_date">
                                  <p class="text-md">
                                    {% assign date_format = block.settings.date | default: '%b %d' %}
                                    {% case date_format %}
                                      {% when 'abbreviated_date' %}
                                        {{ article.published_at | date: '%b %d, %Y' }}
                                      {% when 'basic' %}
                                        {{ article.published_at | date: '%m/%d/%Y' }}
                                      {% when 'date' %}
                                        {{ article.published_at | date: '%B %d, %Y' }}
                                      {% when '%b %d' %}
                                        {{ article.published_at | date: '%b %d %Y' }}
                                      {% else %}
                                        {{ article.published_at | date: date_format }}
                                    {% endcase %}
                                  </p>
                                </li>
                                <li class="br-line"></li>
                              {% endif %}
                              {% if block.settings.show_comment_count %}
                                <li class="entry_comment">
                                  <p class="text-md">
                                    {{ article.comments_count }}
                                    {{ 'sections.blog.comments' | t }}
                                  </p>
                                </li>
                              {% endif %}
                            </ul>
                          </div>
                        </div>
                      {% endfor %}
                    {% endif %}
                  </div>

                  {%- if paginate.pages > 1 -%}
                    <ul class="wg-pagination">
                      {%- if paginate.previous -%}
                        <li>
                          <a href="{{ paginate.previous.url }}" class="pagination-item">
                            <i class="icon-arr-left"></i>
                          </a>
                        </li>
                      {%- endif -%}

                      {%- for part in paginate.parts -%}
                        {%- if part.is_link -%}
                          <li>
                            <a href="{{ part.url }}" class="pagination-item">{{ part.title }}</a>
                          </li>
                        {%- else -%}
                          {%- if part.title == paginate.current_page -%}
                            <li class="active">
                              <div class="pagination-item">{{ part.title }}</div>
                            </li>
                          {%- else -%}
                            <li>
                              <span class="pagination-item">{{ part.title }}</span>
                            </li>
                          {%- endif -%}
                        {%- endif -%}
                      {%- endfor -%}

                      {%- if paginate.next -%}
                        <li>
                          <a href="{{ paginate.next.url }}" class="pagination-item">
                            <i class="icon-arr-right2"></i>
                          </a>
                        </li>
                      {%- endif -%}
                    </ul>
                  {%- endif -%}
                {%- endpaginate -%}
              </div>

              <!-- Sidebar for other layouts -->
              {% if has_sidebar and section.settings.layout != 'list_v2' and section.settings.layout != 'grid_v2' %}
                {% for sidebar_block in section.blocks %}
                  {% if sidebar_block.type == 'blog_sidebar' %}
                    <div class="col-lg-4">
                      <div class="sidebar-blog d-lg-grid d-none sidebar-content-wrap">
                        {% if sidebar_block.settings.show_recent_posts %}
                          <div class="sb-item">
                            <p class="sb-title text-xl fw-medium">{{ 'sections.blog.recent_posts' | t }}</p>
                            <div class="sb-content">
                              {% if current_blog.articles.size > 0 %}
                                <ul class="recent-blog-list">
                                  {% for article in current_blog.articles limit: 3 %}
                                    <li class="hover-img">
                                      <div class="image">
                                        <a href="{{ article.url }}" class="img-style d-block">
                                          {% if article.image %}
                                            <img
                                              src="{{ article.image | image_url: width: 100 }}"
                                              data-src="{{ article.image | image_url: width: 100 }}"
                                              alt="{{ article.image.alt | escape }}"
                                              class="lazyload"
                                              width="100"
                                              height="80"
                                              loading="lazy"
                                            >
                                          {% else %}
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                          {% endif %}
                                        </a>
                                      </div>
                                      <div class="post-content">
                                        <a href="{{ article.url }}" class="link text-md fw-medium">
                                          {{ article.title | truncate: 50 }}
                                        </a>
                                        <p class="entry_date">
                                          {% assign date_format = block.settings.date | default: '%b %d' %}
                                          {% case date_format %}
                                            {% when 'abbreviated_date' %}
                                              {{ article.published_at | date: '%b %d, %Y' }}
                                            {% when 'basic' %}
                                              {{ article.published_at | date: '%m/%d/%Y' }}
                                            {% when 'date' %}
                                              {{ article.published_at | date: '%B %d, %Y' }}
                                            {% when '%b %d' %}
                                              {{ article.published_at | date: '%b %d' }}
                                            {% else %}
                                              {{ article.published_at | date: date_format }}
                                          {% endcase %}
                                        </p>
                                      </div>
                                    </li>
                                  {% endfor %}
                                </ul>
                              {% endif %}
                            </div>
                          </div>
                        {% endif %}

                        {% if sidebar_block.settings.show_tags %}
                          <div class="sb-item">
                            <p class="sb-title text-xl fw-medium">{{ 'sections.blog.tags' | t }}</p>
                            <div class="sb-content entry-tag">
                              {% if current_blog.all_tags.size > 0 %}
                                <ul class="tag-blog-list style-list">
                                  {% for tag in current_blog.all_tags limit: 8 %}
                                    <li>
                                      <a href="{{ current_blog.url }}/tagged/{{ tag | handle }}">
                                        {{ tag }}
                                      </a>
                                    </li>
                                  {% endfor %}
                                </ul>
                              {% endif %}
                            </div>
                          </div>
                        {% endif %}

                        {% if sidebar_block.settings.sidebar_banner_image %}
                          <div class="sb-item">
                            <div class="sb-banner hover-img">
                              <div class="image img-style">
                                <img
                                  src="{{ sidebar_block.settings.sidebar_banner_image | image_url: width: 400 }}"
                                  data-src="{{ sidebar_block.settings.sidebar_banner_image | image_url: width: 400 }}"
                                  alt="{{ sidebar_block.settings.sidebar_banner_title | escape }}"
                                  class="lazyload"
                                  width="400"
                                  height="300"
                                >
                              </div>
                              <div class="banner-content">
                                {% if sidebar_block.settings.sidebar_banner_title != blank %}
                                  <p class="title">
                                    {{ sidebar_block.settings.sidebar_banner_title }}
                                  </p>
                                {% endif %}
                                {% if sidebar_block.settings.sidebar_banner_button_text != blank
                                  and sidebar_block.settings.sidebar_banner_button_link != blank
                                %}
                                  <a
                                    href="{{ sidebar_block.settings.sidebar_banner_button_link }}"
                                    class="tf-btn btn-white hover-primary"
                                  >
                                    {{ sidebar_block.settings.sidebar_banner_button_text }}
                                  </a>
                                {% endif %}
                              </div>
                            </div>
                          </div>
                        {% endif %}
                      </div>
                    </div>
                    {% break %}
                  {% endif %}
                {% endfor %}
              {% endif %}
            </div>
          </section>

        {% when 'blog_sidebar' %}

      {% endcase %}
    {% endfor %}
  </div>
</div>
