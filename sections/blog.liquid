{% style %}
  .recent-blog-list .hover-img img {
    height: 98px;
  }



  @media (min-width: 768px) {
    .s-blog-list-v2 .blog-post-item .blog-content {
      flex: 0 0 55%;
      max-width: 55%;
    }
  }

  .blog-content--center .entry-tag,
  .blog-content--center .entry-meta {
    justify-content: center;
  }
  .blog-content--center .entry-tag .style-list {
    justify-content: center;
  }

  .tag-blog-list li a {
    color: rgba(var(--color-foreground), 0.9) !important;
  }

  /* Image ratio utilities for blog */
  .blog-image-ratio {
    position: relative;
    overflow: hidden;
    display: block;
    border-radius: 16px; /* Set explicit border radius */
  }

  .blog-image-ratio--adapt {
    aspect-ratio: auto;
  }

  .blog-image-ratio--square {
    aspect-ratio: 1 / 1;
  }

  .blog-image-ratio--asos {
    aspect-ratio: 3 / 2.55;
  }

  .blog-image-ratio--landscape {
    aspect-ratio: 16 / 8.33;
  }

  .blog-image-ratio--4-3 {
    aspect-ratio: 4 / 3.4;
  }

  .blog-image-ratio--3-4 {
    aspect-ratio: 3 / 3.4;
}

  .blog-image-ratio > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0; /* Remove border radius from image */
  }

  .blog-image-ratio--adapt > img {
    height: auto;
    object-fit: contain;
    border-radius: 0; /* Remove border radius from image */
  }

  /* Ensure image container inherits styling */
  .img-style {
    border-radius: 12px; /* Set explicit border radius */
    overflow: hidden;
  }

  .entry_image .img-style {
    border-radius: 12px; /* Set explicit border radius */
    display: block;
  }

  /* Ensure blog post items have proper border radius */
  .blog-post-item {
    border-radius: 12px;
    overflow: hidden;
  }

  .entry_image {
    border-radius: 12px;
    overflow: hidden;
  }

  /* Content alignment */
  .blog-content--center {
    text-align: center;
  }

  .blog-content--start {
    text-align: left;
  }

  /* Responsive grid system for blog */
  .s-blog-list-grid {
    display: grid;
    gap: 20px;
  }

  /* Desktop grid classes */
  .s-blog-list-grid.grid-1 {
    grid-template-columns: repeat(1, 1fr);
  }
  .s-blog-list-grid.grid-2 {
    grid-template-columns: repeat(2, 1fr);
  }
  .s-blog-list-grid.grid-3 {
    grid-template-columns: repeat(3, 1fr);
  }
  .s-blog-list-grid.grid-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  /* Tablet grid classes */
  @media (max-width: 991px) {
    .s-blog-list-grid.grid-tb-1 {
      grid-template-columns: repeat(1, 1fr);
    }
    .s-blog-list-grid.grid-tb-2 {
      grid-template-columns: repeat(2, 1fr);
    }
    .s-blog-list-grid.grid-tb-3 {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Mobile grid classes - Force all layouts to single column on mobile */
  @media (max-width: 767px) {
    .s-blog-list-grid {
      grid-template-columns: repeat(1, 1fr) !important;
    }
    .s-blog-list-grid.grid-mb-1 {
      grid-template-columns: repeat(1, 1fr);
    }
    .s-blog-list-grid.grid-mb-2 {
      grid-template-columns: repeat(1, 1fr);
    }
    .s-blog-list-grid.grid-mb-3 {
      grid-template-columns: repeat(1, 1fr);
    }

    .blog-post-item .entry_date p,
    .blog-post-item .entry_comment p,
    .blog-post-item .entry_name {
      font-size: 14px;
    }
  }

  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
    padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  
{% endstyle %}

{% schema %}
{
  "name": "t:sections.blog.name",
  "tag": "section",
  "class": "section",
  "limit": 1,
  "enabled_on": {
    "templates": ["blog"]
  },
  "settings": [
    {
      "type": "select",
      "id": "width",
      "options": [
        {
          "value": "boxed",
          "label": "t:sections.blog.settings.width.options.boxed"
        },
        {
          "value": "full",
          "label": "t:sections.blog.settings.width.options.full"
        }
      ],
      "default": "boxed",
      "label": "t:sections.blog.settings.width.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.blog.settings.color_scheme.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.blog.settings.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.blog.settings.padding_bottom.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_mobile_rate",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "t:sections.blog.settings.padding_mobile_rate.label",
      "default": 75,
      "info": "t:sections.blog.settings.padding_mobile_rate.info"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "list",
          "label": "t:sections.blog.blocks.blog_content.settings.layout.options.list"
        },
        {
          "value": "list_v2",
          "label": "t:sections.blog.blocks.blog_content.settings.layout.options.list_v2"
        },
        {
          "value": "grid_v2",
          "label": "t:sections.blog.blocks.blog_content.settings.layout.options.grid_v2"
        },
        {
          "value": "grid",
          "label": "t:sections.blog.blocks.blog_content.settings.layout.options.grid"
        }
      ],
      "default": "list",
      "label": "t:sections.blog.blocks.blog_content.settings.layout.label"
    }
  ],
  "blocks": [
    {
      "type": "blog_content",
      "name": "t:sections.blog.blocks.blog_content.name",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "blog_source",
          "options": [
            {
              "value": "current",
              "label": "t:sections.blog.blocks.blog_content.settings.blog_source.options.current"
            },
            {
              "value": "specific",
              "label": "t:sections.blog.blocks.blog_content.settings.blog_source.options.specific"
            }
          ],
          "default": "current",
          "label": "t:sections.blog.blocks.blog_content.settings.blog_source.label"
        },
        {
          "type": "blog",
          "id": "specific_blog",
          "label": "t:sections.blog.blocks.blog_content.settings.specific_blog.label",
          "info": "t:sections.blog.blocks.blog_content.settings.specific_blog.info"
        },
        {
          "type": "range",
          "id": "article_limit",
          "min": 1,
          "max": 24,
          "step": 1,
          "default": 6,
          "label": "t:sections.blog.blocks.blog_content.settings.article_limit.label"
        },
        {
          "type": "select",
          "id": "items_per_row_dk",
          "options": [
            {
              "value": "1",
              "label": "1"
            },
            {
              "value": "2",
              "label": "2"
            },
            {
              "value": "3",
              "label": "3"
            },
            {
              "value": "4",
              "label": "4"
            }
          ],
          "default": "2",
          "label": "t:sections.blog.blocks.blog_content.settings.items_per_row_dk.label",
          "visible_if": "{{ section.settings.layout == 'grid' or section.settings.layout == 'grid_v2'}}"
        },
        {
          "type": "select",
          "id": "items_per_row_tb",
          "options": [
            {
              "value": "1",
              "label": "1"
            },
            {
              "value": "2",
              "label": "2"
            },
            {
              "value": "3",
              "label": "3"
            }
          ],
          "default": "2",
          "label": "t:sections.blog.blocks.blog_content.settings.items_per_row_tb.label",
          "visible_if": "{{ section.settings.layout == 'grid' or section.settings.layout == 'grid_v2'}}"
        },
        {
          "type": "select",
          "id": "items_per_row_mb",
          "options": [
            {
              "value": "1",
              "label": "1"
            },
            {
              "value": "2",
              "label": "2"
            }
          ],
          "default": "1",
          "label": "t:sections.blog.blocks.blog_content.settings.items_per_row_mb.label",
          "visible_if": "{{ section.settings.layout == 'grid' or section.settings.layout == 'grid_v2'}}"
        },
        {
          "type": "checkbox",
          "id": "show_excerpt",
          "default": true,
          "label": "t:sections.blog.blocks.blog_content.settings.show_excerpt.label"
        },
        {
          "type": "checkbox",
          "id": "show_author",
          "default": true,
          "label": "t:sections.blog.blocks.blog_content.settings.show_author.label"
        },
        {
          "type": "checkbox",
          "id": "show_comment_count",
          "default": true,
          "label": "t:sections.blog.blocks.blog_content.settings.show_comment_count.label"
        },
        {
          "type": "checkbox",
          "id": "show_date",
          "default": true,
          "label": "t:sections.blog.blocks.blog_content.settings.show_date.label"
        },
        {
          "type": "select",
          "id": "date",
          "options": [
            {
              "value": "abbreviated_date",
              "label": "t:sections.blog.blocks.blog_content.settings.date.options.abbreviated_date"
            },
            {
              "value": "basic",
              "label": "t:sections.blog.blocks.blog_content.settings.date.options.basic"
            },
            {
              "value": "date",
              "label": "t:sections.blog.blocks.blog_content.settings.date.options.date"
            },
            {
              "value": "%b %d",
              "label": "t:sections.blog.blocks.blog_content.settings.date.options.short"
            }
          ],
          "label": "t:sections.blog.blocks.blog_content.settings.date.label",
          "info": "t:sections.blog.blocks.blog_content.settings.date.info",
          "default": "%b %d"
        },
        {
          "type": "header",
          "content": "t:sections.blog_content.settings.header_content"
        },
        {
          "type": "select",
          "id": "Content_align",
          "label": "t:sections.blog_content.settings.content_align.label",
          "default": "start",
          "options": [
            {
              "value": "start",
              "label": "t:sections.blog_content.settings.content_align.option_1"
            },
            {
              "value": "center",
              "label": "t:sections.blog_content.settings.content_align.option_2"
            }
          ]
        },
        {
          "type": "select",
          "id": "image_ratio",
          "options": [
            {
              "value": "-adapt_image",
              "label": "t:sections.blog_content.image_ratio.adapt_image.label"
            },
            {
              "value": "-square",
              "label": "t:sections.blog_content.image_ratio.square.label"
            },
            {
              "value": "-asos",
              "label": "t:sections.blog_content.image_ratio.asos.label"
            },
            {
              "value": "-landscape",
              "label": "t:sections.blog_content.image_ratio.landscape.label"
            },
            {
              "value": "4-3",
              "label": "t:sections.blog_content.image_ratio.43.label"
            },
            {
              "value": "3-4",
              "label": "t:sections.blog_content.image_ratio.34.label"
            }
          ],
          "label": "t:sections.blog_content.image_ratio.label",
          "default": "-adapt_image"
        }
      ]
    },
    {
      "type": "blog_sidebar",
      "name": "t:sections.blog.blocks.blog_sidebar.name",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_categories",
          "default": true,
          "label": "t:sections.blog.blocks.blog_sidebar.settings.show_categories.label",
          "visible_if": "{{ section.settings.layout == 'list_v2' or section.settings.layout == 'grid_v2'}}"
        },
        {
          "type": "checkbox",
          "id": "show_recent_posts",
          "default": true,
          "label": "t:sections.blog.blocks.blog_sidebar.settings.show_recent_posts.label"
        },
        {
          "type": "checkbox",
          "id": "show_tags",
          "default": true,
          "label": "t:sections.blog.blocks.blog_sidebar.settings.show_tags.label"
        },
        {
          "type": "image_picker",
          "id": "sidebar_banner_image",
          "label": "t:sections.blog.blocks.blog_sidebar.settings.sidebar_banner_image.label"
        },
        {
          "type": "text",
          "id": "sidebar_banner_title",
          "default": "Elevate Your Style",
          "label": "t:sections.blog.blocks.blog_sidebar.settings.sidebar_banner_title.label"
        },
        {
          "type": "text",
          "id": "sidebar_banner_button_text",
          "default": "Shop Now",
          "label": "t:sections.blog.blocks.blog_sidebar.settings.sidebar_banner_button_text.label"
        },
        {
          "type": "url",
          "id": "sidebar_banner_button_link",
          "label": "t:sections.blog.blocks.blog_sidebar.settings.sidebar_banner_button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.blog.presets.name",
      "category": "t:sections.blog.presets.category",
      "blocks": [
        {
          "type": "blog_content"
        },
        {
          "type": "blog_sidebar"
        }
      ]
    }
  ]
}
{% endschema %}
