{% comment %}
  Store Locator Section
  Displays a list of stores with interactive map functionality
{% endcomment %}

{%- liquid
  assign color_scheme = section.settings.color_scheme
  assign width = section.settings.width
-%}

<section
  class="s-store-location flat-spacing-2 color-{{ color_scheme }}{% if width == 'full' %} section-full-width{% endif %} section-{{ section.id }}-padding"
>
  <div class="{% if width == 'boxed' %}container{% else %}container-full{% endif %}">
    <div class="row">
      <div class="col-lg-12">
        <!-- Map Container -->
        <div class="wg-map" id="store-map">
          {%- assign first_map_found = false -%}
          {%- for block in section.blocks -%}
            {%- if block.settings.map_iframe != blank and first_map_found == false -%}
              {{ block.settings.map_iframe }}
              {%- assign first_map_found = true -%}
            {%- endif -%}
          {%- endfor -%}

          {%- comment -%} Fallback if no maps are provided {%- endcomment -%}
          {%- if section.blocks.size == 0 or first_map_found == false -%}
            <div
              class="placeholder-map"
              style="height: 400px; background: #f5f5f5; display: flex; align-items: center; justify-content: center; border-radius: 8px;"
            >
              <p style="color: #666; font-size: 16px;">
                {{ 'sections.store-locator.no_stores' | t | default: 'No store maps available' }}
              </p>
            </div>
          {%- endif -%}
        </div>

        <!-- Store List -->
        <div class="tf-grid-layout lg-col-3 sm-col-2">
          {%- for block in section.blocks -%}
            {%- liquid
              assign store_name = block.settings.store_name
              assign address = block.settings.address
              assign phone = block.settings.phone
              assign email = block.settings.email
              assign open_time = block.settings.open_time
              assign map_iframe = block.settings.map_iframe
            -%}

            <div
              class="box-store{% if forloop.first %} active{% endif %}"
              data-store-id="{{ forloop.index }}"
              data-map-iframe="{{ map_iframe | escape }}"
              style="cursor: pointer;"
              {{ block.shopify_attributes }}
            >
              <div class="content">
                {%- if store_name != blank -%}
                  <p class="title">{{ store_name }}</p>
                {%- endif -%}

                <ul class="contact-list">
                  {%- if address != blank -%}
                    <li>
                      <p>
                        {{ 'sections.store-locator.address_label' | t }}:
                        <a
                          class="link"
                          href="https://www.google.com/maps?q={{ address | url_encode }}"
                          target="_blank"
                          rel="noopener"
                        >
                          {{ address }}
                        </a>
                      </p>
                    </li>
                  {%- endif -%}

                  {%- if phone != blank -%}
                    <li>
                      <p>
                        {{ 'sections.store-locator.phone_label' | t }}:
                        <a class="link" href="tel:{{ phone | replace: ' ', '' | replace: '-', '' }}">{{ phone }}</a>
                      </p>
                    </li>
                  {%- endif -%}

                  {%- if email != blank -%}
                    <li>
                      <p>
                        {{ 'sections.store-locator.email_label' | t }}:
                        <a class="link" href="mailto:{{ email }}">{{ email }}</a>
                      </p>
                    </li>
                  {%- endif -%}

                  {%- if open_time != blank -%}
                    <li>
                      <p>
                        {{ 'sections.store-locator.hours_label' | t }}:
                        <span class="text-main">{{ open_time }}</span>
                      </p>
                    </li>
                  {%- endif -%}
                </ul>
              </div>

              <div class="bot">
                {%- if address != blank -%}
                  <a
                    href="#"
                    target="_blank"
                    rel="noopener"
                    class="tf-btn-line"
                  >
                    {{ 'sections.store-locator.get_direction' | t }}
                    <i class="icon-arrow-top-left"></i>
                  </a>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>

{%- comment -%} Mobile padding media query {%- endcomment -%}
<style>
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
    padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
  } 
    
  @media screen and (min-width: 750px) and (max-width: 1199px) {
      .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_tablet_rate | divided_by: 100.0 }});
      padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_tablet_rate | divided_by: 100.0 }});
      }
  }

  @media screen and (min-width: 1200px) {
      .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      }
  }
  @media (max-width: 767px) {
    .wg-map iframe {
      height: 350px !important;
    }
  }

  .wg-map iframe {
    border-radius: 16px;
    overflow: hidden;
    height: 589px;
    width: 100%;
  }

  .color-{{ color_scheme }} .box-store {
    background-color: var(--gradient-background);
  }

  .color-{{ color_scheme }} .box-store .text-main {
    color: var(--text-color) !important;
  }
</style>

{%- comment -%} Store Locator JavaScript {%- endcomment -%}
<script src="{{ 'store-locator.js' | asset_url }}" defer></script>

