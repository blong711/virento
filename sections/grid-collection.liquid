<!-- Grid Collection -->
<section
  class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
>
  <div class="{% if section.settings.width == 'boxed' %}container{% else %}container-full{% endif %}">
    <div class="grid-cls grid-vegetable{% if section.settings.reverse_layout %} grid-cls-v4-reverse  {% else %} grid-cls-v4 {% endif %}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'sale_item1' -%}
            <div
              class="item1 s-cls style-absolute hover-img abs-left-center color-{{ block.settings.color_scheme }}"
              {{ block.shopify_attributes }}
            >
              <div class="image img-style">
                {%- if block.settings.image != blank -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 300 }}"
                    data-src="{{ block.settings.image | image_url: width: 300 }}"
                    alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                    class="lazyload"
                    width="{{ block.settings.image.width | default: 300 }}"
                    height="{{ block.settings.image.height | default: 200 }}"
                    loading="lazy"
                  >
                {%- endif -%}
              </div>
              <div class="content">
                <div class="box-title">
                  {%- if block.settings.sale_text != blank -%}
                    <div class="">
                      {%- if block.settings.sale_text_size == 'small' -%}
                        <p class="text-sm">{{ block.settings.sale_text }}</p>
                      {%- elsif block.settings.sale_text_size == 'medium' -%}
                        <p class="text-md">{{ block.settings.sale_text }}</p>
                      {%- elsif block.settings.sale_text_size == 'large' -%}
                        <p class="text-lg">{{ block.settings.sale_text }}</p>
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.title != blank -%}
                    <div>
                      {%- if block.settings.title_size == 'small' -%}
                        {{
                          block.settings.title
                          | replace: '<p>', '<p style="font-size: 16px; line-height: 24px; font-weight: 500;">'
                        }}
                      {%- elsif block.settings.title_size == 'medium' -%}
                        {{
                          block.settings.title
                          | replace: '<p>', '<p style="font-size: 24px; line-height: 32px; font-weight: 500;">'
                        }}
                      {%- elsif block.settings.title_size == 'large' -%}
                        {{
                          block.settings.title
                          | replace: '<p>', '<p style="font-size: 32px; line-height: 38px; font-weight: 500;">'
                        }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
                {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
                  <div class="box-btn">
                    <a href="{{ block.settings.button_link }}" class="tf-btn animate-btn">
                      <span class="text-sm">{{ block.settings.button_label }}</span>
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>

          {%- when 'sale_item2' -%}
            <div
              class="item2 s-cls style-absolute hover-img abs-left-center color-{{ block.settings.color_scheme }}"
              {{ block.shopify_attributes }}
            >
              <div class="image img-style">
                {%- if block.settings.image != blank -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 300 }}"
                    data-src="{{ block.settings.image | image_url: width: 300 }}"
                    alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                    class="lazyload"
                    width="{{ block.settings.image.width | default: 300 }}"
                    height="{{ block.settings.image.height | default: 200 }}"
                    loading="lazy"
                  >
                {%- endif -%}
              </div>
              <div class="content">
                <div class="box-title">
                  {%- if block.settings.sale_text != blank -%}
                    {%- if block.settings.sale_text_size == 'small' -%}
                      <p class="text-sm">{{ block.settings.sale_text }}</p>
                    {%- elsif block.settings.sale_text_size == 'medium' -%}
                      <p class="text-md">{{ block.settings.sale_text }}</p>
                    {%- elsif block.settings.sale_text_size == 'large' -%}
                      <p class="text-lg">{{ block.settings.sale_text }}</p>
                    {%- endif -%}
                  {%- endif -%}
                  {%- if block.settings.title != blank -%}
                    <div>
                      {%- if block.settings.title_size == 'small' -%}
                        {{
                          block.settings.title
                          | replace: '<p>', '<p style="font-size: 16px; line-height: 24px; font-weight: 500;">'
                        }}
                      {%- elsif block.settings.title_size == 'medium' -%}
                        {{
                          block.settings.title
                          | replace: '<p>', '<p style="font-size: 24px; line-height: 32px; font-weight: 500;">'
                        }}
                      {%- elsif block.settings.title_size == 'large' -%}
                        {{
                          block.settings.title
                          | replace: '<p>', '<p style="font-size: 32px; line-height: 38px; font-weight: 500;">'
                        }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
                {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
                  <div class="box-btn">
                    <a href="{{ block.settings.button_link }}" class="tf-btn animate-btn">
                      <span class="text-sm">{{ block.settings.button_label }}</span>
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>

          {%- when 'discover_item' -%}
            <div
              class="item3 s-cls style-absolute abs-left-center type-large hover-img color-{{ block.settings.color_scheme }}"
              {{ block.shopify_attributes }}
            >
              <div class="image img-style">
                {%- if block.settings.image != blank -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 600 }}"
                    data-src="{{ block.settings.image | image_url: width: 600 }}"
                    alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                    class="lazyload"
                    width="{{ block.settings.image.width | default: 600 }}"
                    height="{{ block.settings.image.height | default: 400 }}"
                    loading="lazy"
                  >
                {%- endif -%}
              </div>
              <div class="content">
                <div class="box-title">
                  <div class="box-offer mb_4">
                    {%- if block.settings.offer_text != blank -%}
                      <p class="offer text-xs bg-white text-dark fw-semibold">
                        {{- block.settings.offer_text -}}
                      </p>
                    {%- endif -%}
                  </div>
                  {%- if block.settings.title != blank -%}
                    {%- if block.settings.title_size == 'small' -%}
                      <h4>{{ block.settings.title }}</h4>
                    {%- elsif block.settings.title_size == 'medium' -%}
                      <h3>{{ block.settings.title }}</h3>
                    {%- elsif block.settings.title_size == 'large' -%}
                      <h2>{{ block.settings.title }}</h2>
                    {%- endif -%}
                  {%- endif -%}
                  {%- if block.settings.content != blank -%}
                    <div>
                      {%- if block.settings.content_size == 'small' -%}
                        {{ block.settings.content | replace: '<p>', '<p class="text-sm">' }}
                      {%- elsif block.settings.content_size == 'medium' -%}
                        {{ block.settings.content | replace: '<p>', '<p class="text-md">' }}
                      {%- elsif block.settings.content_size == 'large' -%}
                        {{ block.settings.content | replace: '<p>', '<p class="text-lg">' }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.show_price and block.settings.price != blank -%}
                    <p class="text-md fw-medium">
                      {%- if block.settings.price_prefix != blank -%}
                        {{ block.settings.price_prefix }}
                      {%- endif -%}
                      <span class="display-md" style="color: rgb(var(--color-foreground2)) !important;">
                        {{- block.settings.price -}}
                      </span>
                    </p>
                  {%- endif -%}
                </div>
                {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
                  <div class="box-btn">
                    <a href="{{ block.settings.button_link }}" class="tf-btn animate-btn animate-dark">
                      {{ block.settings.button_label }}
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>
<!-- Grid Collection -->

<style>
  .grid-cls-v4-reverse {
    grid-template-columns: 1fr;
  }

  .grid-cls-v4-reverse {
    grid-template-areas:'aa bb' 'cc cc' ;
    grid-template-columns: 1fr 1fr;
  }
  .grid-cls-v4-reverse {
    grid-template-areas: 'cc cc aa' 'cc cc bb';
    grid-template-columns: 1fr 1fr 1fr;
  }
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
    padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

