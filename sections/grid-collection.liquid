<!-- Grid Collection -->
<section
  class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
>
  <div class="{% if section.settings.width == 'boxed' %}container{% else %}container-full{% endif %}">
    <div class="grid-cls {% if section.settings.reverse_layout %} grid-cls-v3 grid-mega  {% else %} grid-vegetable grid-cls-v4 {% endif %}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'sale_item1' -%}
            <div
              class="{% if section.settings.reverse_layout %} item3  {% else %} item1 {% endif %} s-cls style-absolute hover-img abs-left-center color-{{ block.settings.color_scheme }}"
              {{ block.shopify_attributes }}
            >
              <div class="image img-style">
                {%- if block.settings.image != blank -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 500 }}"
                    data-src="{{ block.settings.image | image_url: width: 500 }}"
                    alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                    class="lazyload"
                    width="{{ block.settings.image.width | default: 500 }}"
                    height="{{ block.settings.image.height | default: 400 }}"
                    loading="lazy"
                  >
                {%- endif -%}
              </div>
              <div class="content">
                <div class="box-title">
                  {%- if block.settings.sale_text != blank -%}
                    <div class="">
                      {%- if block.settings.sale_text_size == 'small' -%}
                        <p class="text-sm {% if block.settings.discount_style == 'badge' %}offer{% endif %}">
                          {{ block.settings.sale_text }}
                        </p>
                      {%- elsif block.settings.sale_text_size == 'medium' -%}
                        <p class="text-md {% if block.settings.discount_style == 'badge' %}offer{% endif %}">
                          {{ block.settings.sale_text }}
                        </p>
                      {%- elsif block.settings.sale_text_size == 'large' -%}
                        <p class="text-lg {% if block.settings.discount_style == 'badge' %}offer{% endif %}">
                          {{ block.settings.sale_text }}
                        </p>
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.title != blank -%}
                    <div>
                      {%- if block.settings.title_size == 'small' -%}
                        {{
                          block.settings.title
                          | replace: '<p>', '<p style="font-size: 16px; line-height: 24px; font-weight: 500;">'
                        }}
                      {%- elsif block.settings.title_size == 'medium' -%}
                        {{
                          block.settings.title
                          | replace: '<p>', '<p style="font-size: 24px; line-height: 32px; font-weight: 500;">'
                        }}
                      {%- elsif block.settings.title_size == 'large' -%}
                        {{
                          block.settings.title
                          | replace: '<p>', '<p style="font-size: 32px; line-height: 38px; font-weight: 500;">'
                        }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.subtitle != blank -%}
                    <div>
                      {%- if block.settings.subtitle_size == 'small' -%}
                        {{ block.settings.subtitle | replace: '<p>', '<p class="text-sm">' }}
                      {%- elsif block.settings.subtitle_size == 'medium' -%}
                        {{ block.settings.subtitle | replace: '<p>', '<p class="text-md">' }}
                      {%- elsif block.settings.subtitle_size == 'large' -%}
                        {{ block.settings.subtitle | replace: '<p>', '<p class="text-lg">' }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
                {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
                  <div class="box-btn">
                    <a href="{{ block.settings.button_link }}" class="tf-btn animate-btn">
                      <span class="{{ block.settings.button_label_size }}">{{ block.settings.button_label }}</span>
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>

          {%- when 'sale_item2' -%}
            <div
              class="item2 s-cls style-absolute hover-img abs-left-center color-{{ block.settings.color_scheme }}"
              {{ block.shopify_attributes }}
            >
              <div class="image img-style">
                {%- if block.settings.image != blank -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 500 }}"
