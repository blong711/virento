{% schema %}
{
  "name": "t:sections.grid-collection.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:sections.all.width.label",
      "options": [
        { "value": "container", "label": "t:sections.all.width.options.boxed" },
        { "value": "container-full", "label": "t:sections.all.width.options.full_width" }
      ],
      "default": "container"
    },
    {
      "type": "range",
      "id": "gap_desktop",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "t:sections.grid-collection.settings.gap_desktop.label",
      "default": 24
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_mobile_rate",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "t:sections.all.padding.padding_mobile_rate.label",
      "default": 75,
      "info": "t:sections.all.padding.padding_mobile_rate.info"
    }
  ],
  "blocks": [
    {
      "type": "grid_item",
      "name": "t:sections.grid-collection.blocks.grid_item.name",
      "limit": 12,
      "settings": [
        { "type": "collection", "id": "collection", "label": "t:sections.grid-collection.blocks.grid_item.settings.collection.label" },
        { "type": "checkbox", "id": "show_button", "label": "t:sections.grid-collection.blocks.grid_item.settings.show_button.label", "default": true }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.grid-collection.presets.name",
      "category": "t:sections.grid-collection.presets.category",
      "blocks": [
        { "type": "grid_item", "settings": { "collection": "" } },
        { "type": "grid_item", "settings": { "collection": "" } },
        { "type": "grid_item", "settings": { "collection": "" } }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
    padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} .grid-cls {
      gap: {{ section.settings.gap_desktop }}px;
    }
  }
{% endstyle %}

<section class="flat-spacing-3 pt-0 color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="{{ section.settings.width }}">
    <div class="grid-cls grid-cls-v1">
      {% for block in section.blocks %}
        {% assign index_class = forloop.index | prepend: 'item' %}
        <div class="{{ index_class }} wg-cls style-abs hover-img" {{ block.shopify_attributes }}>
          {% assign collection = block.settings.collection %}
          {% assign link_url = collection.url | default: '#' %}
          <a href="{{ link_url }}" class="image img-style d-block">
            {% if collection != blank and collection.image != blank %}
              <img 
                src="{{ collection.image | image_url: width: 800 }}"
                srcset="
                  {{ collection.image | image_url: width: 400 }} 400w,
                  {{ collection.image | image_url: width: 600 }} 600w,
                  {{ collection.image | image_url: width: 800 }} 800w
                "
                sizes="(min-width: 1200px) 33vw, (min-width: 768px) 33vw, 100vw"
                alt="{{ collection.title | default: 'Collection' | escape }}"
                width="{{ collection.image.width | default: 800 }}"
                height="{{ collection.image.height | default: 800 }}"
                loading="lazy"
              >
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag }}
            {% endif %}
          </a>
          {% if collection != blank and block.settings.show_button %}
            <div class="cls-btn text-center">
              <a href="{{ link_url }}" class="tf-btn btn-cls btn-white animate-btn animate-dark">{{ collection.title }}</a>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>


