                  <div class=" box-offer mb_4">
                    {%- if block.settings.offer_text != blank -%}
                      <p class="{% if block.settings.discount_style == 'badge' %}offer{% endif %} text-xs fw-semibold">
                        {{- block.settings.offer_text -}}
                      </p>
                    {%- endif -%}
                  </div>
                  {%- if block.settings.title != blank -%}
                    {%- if block.settings.title_size == 'small' -%}
                      {{ block.settings.title | replace: '<p>', '<h4>' | replace: '</p>', '</h4>' }}
                    {%- elsif block.settings.title_size == 'medium' -%}
                      {{ block.settings.title | replace: '<p>', '<h3>' | replace: '</p>', '</h3>' }}
                    {%- elsif block.settings.title_size == 'large' -%}
                      {{ block.settings.title | replace: '<p>', '<h2>' | replace: '</p>', '</h2>' }}
                    {%- endif -%}
                  {%- endif -%}
                  {%- if block.settings.content != blank -%}
                    <div>
                      {%- if block.settings.content_size == 'small' -%}
                        {{ block.settings.content | replace: '<p>', '<p class="text-sm">' }}
                      {%- elsif block.settings.content_size == 'medium' -%}
