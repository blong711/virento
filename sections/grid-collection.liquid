                    <a href="{{ block.settings.button_link }}" class="tf-btn animate-btn">
                      <span class="{{ block.settings.button_label_size }}">{{ block.settings.button_label }}</span>
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>

          {%- when 'discover_item' -%}
